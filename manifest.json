{
  "manifest_version": 3,
  "name": "Google Ads Bot",
  "version": "0.1.0",
  "description": "Automated Google Ads campaign creation and management extension",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://ads.google.com/*",
    "https://myads.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Ads Bot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ads.google.com/*",
        "https://myads.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
